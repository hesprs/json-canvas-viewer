{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"lib": ["ESNext", "DOM"],
		"paths": {
			"@/*": ["./src/*"],
			"@": ["./src"],
			"$/*": ["./src/core/*"],
			"$": ["./src/core"]
		}
	},
	"include": ["src/**/*", "test/**/*"],
	"exclude": ["node_modules", "./dist"]
}
